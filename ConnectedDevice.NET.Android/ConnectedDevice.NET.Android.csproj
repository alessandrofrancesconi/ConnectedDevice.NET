<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-android34.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <SupportedOSPlatformVersion>24.0</SupportedOSPlatformVersion>
    <Title>ConnectedDevice.NET.Android</Title>
    <Version>1.0.1</Version>
    <Authors>Alessandro Francesconi</Authors>
    <Description>Extension for ConnectedDevice.NET to use it on Android platforms
</Description>
    <PackageProjectUrl>https://github.com/alessandrofrancesconi/ConnectedDevice.NET</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/alessandrofrancesconi/ConnectedDevice.NET</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Plugin.BLE" Version="3.1.0" />
    <PackageReference Include="Xamarin.AndroidX.Core" Version="1.15.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\ConnectedDevice.NET\ConnectedDevice.NET.csproj">
      <ReferenceSourceTarget></ReferenceSourceTarget>
    </ProjectReference>
  </ItemGroup>

</Project>
